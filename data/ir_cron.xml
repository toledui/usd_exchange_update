<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_update_usd_exchange_rate" model="ir.cron">
            <field name="name">Actualizar tipo de cambio USD desde Banxico</field>
            <field name="model_id" ref="base.model_res_currency"/>
            <field name="state">code</field>
            <field name="code">model.update_usd_exchange_rate()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(datetime.datetime.now() + datetime.timedelta(days=1)).replace(hour=7, minute=0, second=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>

    </data>
</odoo>
